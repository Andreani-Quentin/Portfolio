{% extends 'base.html.twig' %}

{% block title %}Timeline index{% endblock %}

{% block body %}
    <h1>Timeline index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Dates</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for timeline in timelines %}
            <tr>
                <td>{{ timeline.id }}</td>
                <td>{{ timeline.title }}</td>
                <td>{{ timeline.dates }}</td>
                <td>{{ timeline.content }}</td>
                <td>
                    <a href="{{ path('timeline_show', {'id': timeline.id}) }}">show</a>
                    <a href="{{ path('timeline_edit', {'id': timeline.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('timeline_new') }}">Create new</a>
{% endblock %}
