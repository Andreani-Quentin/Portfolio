{% extends 'base.html.twig' %}

{% block title %}Competences index{% endblock %}

{% block body %}
    <section class="container">
        <h1>Competences index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Icon</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for competence in competences %}
                <tr>
                    <td>{{ competence.id }}</td>
                    <td>{{ competence.title }}</td>
                    <td>{{ competence.content }}</td>
                    <td>{{ competence.icon }}</td>
                    <td>
                        <a href="{{ path('competences_show', {'id': competence.id}) }}">show</a>
                        <a href="{{ path('competences_edit', {'id': competence.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('competences_new') }}">Create new</a>
    </section>
{% endblock %}
